@startuml
skinparam SwimlaneTitleFontSize 14
skinparam SwimlaneBorderThickness 1
skinparam ActivityBackgroundColor #FEFECE
skinparam ActivityBorderColor #A80036
skinparam ActivityFontSize 12
skinparam ArrowColor #A80036
skinparam Shadowing false

|Admin|
start
:Mengakses menu gelombang pendaftaran;

|Sistem|
:Menampilkan daftar gelombang pendaftaran;

|Admin|
if (Pilih aksi gelombang?) then (Tambah Gelombang)
    :Memilih opsi buat gelombang baru;
    :Mengisi informasi gelombang (Jadwal & Kuota);
    :Menyimpan gelombang baru;
    
    |Sistem|
    :Validasi kelengkapan data gelombang;
    if (Apakah data valid?) then (Ya)
        :Menjadwalkan gelombang pendaftaran baru;
        :Menampilkan konfirmasi sukses;
    else (Tidak)
        :Menampilkan pesan kesalahan input;
    endif
    
elseif (Edit Gelombang)
    :Memilih gelombang yang akan diedit;
    :Mengubah informasi jadwal atau kuota;
    :Menyimpan perubahan;
    
    |Sistem|
    :Validasi perubahan data;
    if (Apakah data valid?) then (Ya)
        :Memperbarui informasi gelombang;
        :Menampilkan konfirmasi pembaruan;
    else (Tidak)
        :Menampilkan pesan kesalahan input;
    endif

elseif (Hapus Gelombang)
    :Memilih gelombang untuk dihapus;
    :Mengonfirmasi penghapusan;
    
    |Sistem|
    :Memeriksa status penggunaan gelombang;
    if (Apakah bisa dihapus?) then (Ya)
        :Menghapus data gelombang dari sistem;
        :Menampilkan konfirmasi penghapusan;
    else (Tidak)
        :Menampilkan pesan penolakan penghapusan;
    endif
endif

stop
@enduml
