@startuml
skinparam SwimlaneTitleFontSize 14
skinparam SwimlaneBorderThickness 1
skinparam ActivityBackgroundColor #FEFECE
skinparam ActivityBorderColor #A80036
skinparam ActivityFontSize 12
skinparam ArrowColor #A80036
skinparam Shadowing false

|Kepala Sekolah / Operator Sekolah|
start
:Mengakses menu laporan PPDB;

|Sistem|
:Menyiapkan data ringkasan pendaftaran;
:Menampilkan dashboard laporan PPDB;

|Kepala Sekolah / Operator Sekolah|
if (Apakah ingin menyaring data?) then (Ya)
    :Memilih kriteria filter laporan;
    :Menerapkan filter data;
    
    |Sistem|
    :Memproses data sesuai kriteria filter;
    :Menampilkan hasil filter laporan;
else (Tidak)
endif

|Kepala Sekolah / Operator Sekolah|
if (Apakah ingin mengunduh laporan?) then (Ya)
    :Memilih opsi ekspor laporan (Excel/PDF);
    
    |Sistem|
    :Menghasikan file dokumen laporan;
    :Menyerahkan file unduhan ke operator sekolah;
else (Tidak)
endif

stop
@enduml
