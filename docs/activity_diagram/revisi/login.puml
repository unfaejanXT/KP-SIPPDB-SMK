@startuml
skinparam SwimlaneTitleFontSize 14
skinparam SwimlaneBorderThickness 1
skinparam ActivityBackgroundColor #FEFECE
skinparam ActivityBorderColor #A80036
skinparam ActivityFontSize 12
skinparam ArrowColor #A80036
skinparam Shadowing false

|Pengguna|
start
:Mengakses halaman login;

|Sistem|
:Menampilkan formulir login;

repeat
    |Pengguna|
    :Memasukkan email dan password;
    :Menekan tombol login;

    |Sistem|
    :Memvalidasi kredensial (autentikasi);
    if (Apakah kredensial valid?) then (Tidak)
        :Menampilkan pesan kesalahan kredensial;
    endif
repeat while (Login berhasil?) is (Tidak)
->Ya;

:Membuat sesi pengguna baru;
:Mengalihkan ke halaman dashboard;
stop
@enduml
