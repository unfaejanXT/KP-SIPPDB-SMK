@startuml
skinparam SwimlaneTitleFontSize 14
skinparam SwimlaneBorderThickness 1
skinparam ActivityBackgroundColor #FEFECE
skinparam ActivityBorderColor #A80036
skinparam ActivityFontSize 12
skinparam ArrowColor #A80036
skinparam Shadowing false

actor "Operator Sekolah" as Admin
boundary "Halaman Jurusan" as View
control "JurusanController" as Ctrl
entity "Jurusan" as Model

Admin -> View : Mengakses menu kelola jurusan
activate View
View -> Ctrl : index()
activate Ctrl
Ctrl -> Model : getAll()
activate Model
Model --> Ctrl : listJurusan
deactivate Model
Ctrl -> View : renderList()
deactivate Ctrl

alt Tambah Jurusan
    Admin -> View : Input data jurusan
    View -> Ctrl : store(request)
    activate Ctrl
    Ctrl -> Ctrl : validate(request)
    
    alt Valid
        Ctrl -> Model : create(data)
        Ctrl --> View : Show Success
    else Invalid
        Ctrl --> View : Show Error
    end
    deactivate Ctrl

else Edit Jurusan
    Admin -> View : Edit data jurusan
    View -> Ctrl : update(request)
    activate Ctrl
    Ctrl -> Ctrl : validate(request)
    
    alt Valid
        Ctrl -> Model : update(data)
        Ctrl --> View : Show Success
    else Invalid
        Ctrl --> View : Show Error
    end
    deactivate Ctrl

else Hapus Jurusan
    Admin -> View : Hapus jurusan
    View -> Ctrl : destroy(id)
    activate Ctrl
    
    Ctrl -> Model : countPendaftar(id)
    alt No Pendaftar
        Ctrl -> Model : delete()
        Ctrl --> View : Show Success
    else Has Relations
        Ctrl --> View : Show Error "Cannot Delete"
    end
    deactivate Ctrl
end

deactivate View

@enduml
