@startuml
skinparam SwimlaneTitleFontSize 14
skinparam SwimlaneBorderThickness 1
skinparam ActivityBackgroundColor #FEFECE
skinparam ActivityBorderColor #A80036
skinparam ActivityFontSize 12
skinparam ArrowColor #A80036
skinparam Shadowing false

actor "Calon Siswa" as User
boundary "Halaman Info Pendaftaran" as View
control "PendaftaranController" as Ctrl
entity "Gelombang" as Model

User -> View : Mengakses informasi status pendaftaran
activate View

View -> Ctrl : checkStatusPendaftaran()
activate Ctrl

Ctrl -> Model : getActiveGelombang()
activate Model
Model --> Ctrl : gelombangAktif
deactivate Model

alt Gelombang Aktif Ada
    Ctrl -> Ctrl : checkDateRange(gelombangAktif)
    
    alt Dalam Periode
        Ctrl -> View : renderView(status='BUKA', linkDaftar)
    else Belum/Lewat Periode
        Ctrl -> View : renderView(status='TUTUP')
    end
else Tidak Ada Gelombang
    Ctrl -> View : renderView(status='BELUM TERSEDIA')
end
deactivate Ctrl

View --> User : Menampilkan status (BUKA/TUTUP)

@enduml
